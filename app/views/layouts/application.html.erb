<!DOCTYPE html>
<html>
<head>
  <title>ToDo</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container">
    <% if flash[:notice] %> 
      <div class="alert alert-info"> 
        <%= flash[:notice] %> 
      </div>
    <% end %>
    <% if flash[:alert] %> 
      <div class="alert alert-danger"> 
        <%= flash[:alert] %> 
      </div>
    <% end %>
    
<%= yield %>

</body>
</html>
